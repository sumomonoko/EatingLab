<div class="row">
  <table class="table table-borderless">
    <tr>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th>フォロー中</th>
      <td><%= link_to user.followings.count, user_followings_path(user) %></td>
    </tr>
    <tr>
      <th>フォロワー</th>
      <td><%= link_to user.followers.count, user_followers_path(user) %></td>
    </tr>
    <tr>
      <td>
        <% if current_user == user %>
          <%= link_to "DM一覧", dms_path, class: 'btn btn-success mx-auto rounded px-4 my-4' %>
        <% else %>
          <% unless user.id == current_user.id %>
            <% if @is_room == true %>
              <%= link_to "DM", room_path(@room_id) %>
            <% else %>
              <% form_for @room do |f| %>
                <% fields_for @entry do |e| %>
                  <% e.number_field :user_id, value: @user.id, hidden: true %>
                <% end %>
              <% end %>
            <% end %>
        <% end %>
      </td>
    </tr>
  </table>
</div>

<div class = "row" >
  <% if current_user == user %>
    <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-block' do %>
    <i class="fa-solid fa-user-gear"></i>
    <% end %>
  <% else %>
    <td id="relationship_btn_<%= user.id %>">
      <%= render "public/relationships/followbtn", user: user, options: { class: ""} %>
    </td>
  <% end %>
</div>