<table>
  <tbody>
    <% food.comments.each do |comment| %>
    <tr>
      <td>
        <%= link_to user_path(comment.user) do %>
          <%= image_tag comment.user.get_image, size: "50x50" %><br>
          <%= comment.user.name %>
        <% end %>
      </td>
      <td><%= comment.food_comment %></td>
      <td>
        <% if comment.user == current_user %>
          <%= link_to "削除する", food_comment_path(food, comment), method: :delete, class: "btn btn-sm btn-danger float-end" %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>