<style>
  h3{
    background: #FFDEAD;
  }
</style>
<div class="container">
  <div class = "row" >
    <div class = "col" >
      <div class="float-left font-weight-bold px-3 my-3 rounded-pill">
        <% if current_user == @user %>
          <h3>myフォロワー一覧</h3>
        <% else %>
          <h3><%= @user.name %>さんのフォロワー一覧</h3>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="offset-2 float-center col-10">
      <% if @users.exists? %>
        <td id="relationship_index_<%= @user.id %>">
          <%= render "public/relationships/index", users: @users %>
        </td>
      <% else %>
        <p>ユーザーはいません</p>
      <% end %>
    </div>
  </div>
  <%= link_to "マイページに戻る", user_path(@user), class: 'btn btn-secondary mt-5' %>
</div>