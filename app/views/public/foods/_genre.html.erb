<table class="table table-borderless">
  <tr>
    <td>
      <%= link_to user_path(user) do %>
        <%= image_tag current_user.get_image(90, 90), class: 'rounded-circle' %>
        <%= current_user.name %>
      <% end %>
    </td>
  </tr>
</table>
<table class="table table-hover">
  <thead class="table-bordered text-center">
    <tr>
      <th>ジャンル</th>
    </tr>
  </thead>
  <tbody class="table-bordered">
    <% genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<div class = "row" >
  <% if current_user.email != 'guest@example.com' %>
    <%= link_to "投稿する", new_food_path, class: 'btn btn-outline-secondary btn-block' %>
  <% end %>
</div>