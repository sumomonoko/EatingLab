<div class="container px-5 px-sm-0">
  <div id="error_explanation">
    <%= render 'layouts/error_messages', obj: @user %>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="float-left font-weight-bold bg-light px-3 my-3"><%= @user.name %>さんの会員情報編集</h4>
    </div>
  </div>
  <div class="row">
    <div class = "offset-2 float-center col-6">
      <%= form_with model: @user, url: admin_user_path(@user), method: :patch, local:true do |f| %>
        <table class="table table-borderless">
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= f.text_field :name, size: "40x5" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.text_field :email, value: @user.email, size: "40x5" %></td>
          </tr>
          <tr>
            <th>コメント</th>
            <td><%= f.text_area :introduction, value: @user.introduction, size: "40x7" %></td>
          </tr>
          <tr>
            <th><%= f.label :is_active, '会員ステータス' %></th>
            <td>
              <div class="field">
                <%= f.radio_button :is_active, 'true' %>有効&emsp;
                <%= f.radio_button :is_active, 'false' %>退会
              </div>
            </td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit '変更を保存', class: 'btn btn-success mx-auto rounded px-4 my-4' %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to "戻る", admin_user_path(@user), class: 'btn btn-secondary mt-5' %>
</div>
